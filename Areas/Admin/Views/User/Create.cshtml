@model UserViewModel
@{
    ViewData["Title"] = "Create User";
}
<h3>Thêm người dùng</h3>
<form asp-controller="User" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Email" class="text text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="text" asp-for="Password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Password" class="text text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-controller="User" asp-action="Index">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}